<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        tools:context=".ui.CommunitySelectionActivity">

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="lottie_loading.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:visibility="gone"/>

    <RelativeLayout
            android:id="@+id/layoutContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a community"
                android:textColor="@color/colorPrimary"
                android:textSize="36dp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We'll use these to show you cool stuff."
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/tvTitle"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCommunitySelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_below="@id/tvSubTitle"
                android:layout_above="@id/btnDone"/>
        <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>