<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RegisterSuccessActivity"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white">

    <ImageView
            android:id="@+id/imgSuccess"
            android:src="@drawable/ic_celebrate"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
    android:layout_gravity="center"
    android:visibility="gone"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_fileName="lottie_trophy.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Woo hoo!"
            android:textSize="36dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_margin="12dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are one step closer to helping positive changes in the world"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_margin="12dp"/>

    <Button
            android:id="@+id/btnLetsgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's Go!"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

</LinearLayout>