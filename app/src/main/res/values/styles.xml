<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header">
        <item name="android:textSize">@dimen/font_unit_6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_0_5</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="Body">
        <item name="android:textSize">@dimen/font_unit_4</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_1</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Hyperlink">
        <item name="android:textSize">@dimen/font_unit_4</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_0_5</item>
        <item name="android:textColor">@color/colorSupporting1</item>
    </style>

    <style name="Body.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Body.Secondary">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Body.Disabled">
        <item name="android:textColor">@color/colorDisabled</item>
    </style>

    <style name="Button.Primary" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/Body.Primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="Button.Secondary" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/Body.Secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="Button.Disabled" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/Body.Disabled</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>


    <style name="Button.Tertiary" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="rippleColor">@color/material_ripple_light</item>
    </style>

    <style name="Button.Tertiary.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/material_ripple_light</item>
    </style>

    <style name="Button.Tertiary.Dark">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="rippleColor">@color/material_ripple_dark</item>
    </style>


</resources>
